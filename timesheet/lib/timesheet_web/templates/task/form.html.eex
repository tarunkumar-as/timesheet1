<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= if @isEditing == true do %>
    <div>  
    <%= label f, :approval %>
  	<%= checkbox f, :approval %>
  	<%= error_tag f, :approval %>
    </div>
  <% else %>
    <div class="mt-2">
    <%= label f, :job_code %>
    <%= select f, :job_code, Enum.map(@jobs, fn x -> x.id end), prompt: "Choose your role"%>
    <%= error_tag f, :job_code %>
    </div>
    <div class="mt-2">  
    <%= label f, :hours %>
  	<%= number_input f, :hours %>
  	<%= error_tag f, :hours %>
    </div>
    <div class="mt-2">
  	<%= label f, :note %>
  	<%= text_input f, :note %>
  	<%= error_tag f, :note %>
    </div>
  <% end %>

  

  <div class="mt-2">
    <%= submit "Save" %>
  </div>
<% end %>
