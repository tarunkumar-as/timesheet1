<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :job_code %>
  <%= text_input f, :job_code %>
  <%= error_tag f, :job_code %>

  <%= label f, :budget_hours %>
  <%= number_input f, :budget_hours %>
  <%= error_tag f, :budget_hours %>

  <%= label f, :job_name %>
  <%= text_input f, :job_name %>
  <%= error_tag f, :job_name %>

  <%= label f, :description %>
  <%= text_input f, :description %>
  <%= error_tag f, :description %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
